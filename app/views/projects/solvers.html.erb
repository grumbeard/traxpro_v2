<div class="main-section">
  <div class="solvers-container">
    <% @solvers.each do |solver| %>
      <div class="rounded-card solver-details white">
        <%= render partial: "shared/solver_avatars", locals: {solver: solver} %>
        <p class="title">
          <%= solver.first_name %>
          <%= solver.last_name %>
        </p>
        <p>
          <% solver.sub_categories.each do |sub_cat| %>
            <%= sub_cat.name %>
          <% end %>
        </p>
        <%= simple_form_for [@project, @project_solver] do |f| %>
        <%= f.hidden_field :user_id, value: solver.id %>
        <%= f.button :submit, value: 'Add', class: 'navcolor-light-btn' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div class="btn-container">
  <%= link_to 'Back', project_path(@project), class: 'navcolor-dark command-btn' %>
</div>
