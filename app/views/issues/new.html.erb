<div class="full-screen-section blue-grey">
  <div class="header-section">
    <h1 class="title-center">Report Issue</h1>

  </div>
  <div class="main-section">
    <div id="form-slider" class="carousel slide" data-interval="false" data-ride="carousel" data-pause="hover">
      <ol class="carousel-indicators" id="slider-indicators">
        <li data-target="#form-slider" data-slide-to="0" class="active"></li>
        <li data-target="#form-slider" data-slide-to="1"></li>
        <li data-target="#form-slider" data-slide-to="2"></li>
      </ol>
      <div class="slider-forms-container">
        <%= simple_form_for [@project, @issue] do |f| %>
        <div class="carousel-item active">
          <p id="form-prompt">Give issue a title*:</p>
          <%= f.input :title, input_html: { maxlength: 140 }, placeholder: 'Issue Title' %>
          <p id="form-prompt">Select map*:</p>
          <%= f.association :map, collection: @project.maps %>
          <div class="slider-btn-container">
            <a href="#form-slider" role="button" data-slide="next">
              <div class="navcolor-dark action-btn">
                <p>Continue</p>
                <span class="sr-only">Next</span>
              </div>
            </a>
          </div>
        </div>
        <div class="carousel-item">
          <p class="text-center">select category</p>
          <% Category.all.each do |category| %>
            <div class="rounded-card category-card" data-id="<%= category.id %>">
              <p><%= category.name %></p>
            </div>
          <% end %>
          <div class="slider-btn-container">
            <a href="#form-slider" role="button" data-slide="prev">
              <div class="navcolor-dark action-btn">
                <p>Back</p>
                <span class="sr-only">Previous</span>
              </div>
            </a>
            <a href="#form-slider" role="button" data-slide="next">
              <div class="navcolor-dark action-btn">
                <p>Continue</p>
                <span class="sr-only">Next</span>
              </div>
            </a>
          </div>
          <div style="display: none" data-subcategories='<%= @subcategories.to_json %>'></div>
        </div>
        <div class="carousel-item">
          <p class="text-center">select all that apply</p>
          <div id="category-checkbox"></div>
          <div class="slider-btn-container">
            <a href="#form-slider" role="button" data-slide="prev">
              <div class="navcolor-dark action-btn">
                <p>Back</p>
                <span class="sr-only">Previous</span>
              </div>
            </a>
            <%= f.button :submit, value: 'Next', class: "navcolor-dark action-btn text-white" %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
