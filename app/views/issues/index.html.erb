<ul class="nav nav-pills nav-justified white tab-nav" id="pills-tab" role="tablist">
  <li class="nav-item">
    <a class="grey-btn active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">All Issues</a>
  </li>
  <li class="nav-item">
    <a class="grey-btn" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Pending</a>
  </li>
  <li class="nav-item">
    <a class="grey-btn" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Completed</a>
  </li>
</ul>
<div class="search-form-control form-group">
  <%= form_tag project_issues_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find by Issue or Map"
    %>
    <%= button_tag :submit, class: 'btn icon-btn' do %>
      <i class="fas fa-search btn"></i>
    <% end %>
  <% end %>
</div>
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
    <%= render partial: 'issues_list', locals: { high_priority_issues: @high_priority_issues, low_priority_issues: @low_priority_issues } %>
  </div>
  <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
    <%= render partial: 'issues_list', locals: { high_priority_issues: @high_priority_pending, low_priority_issues: @low_priority_pending } %>
  </div>
  <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
    <%= render partial: 'completed_issues_list', locals: {issues: @completed} %>
  </div>
</div>

<div class="btn-container">
  <%= link_to 'Report new issue', new_project_issue_path(@project), class: "emerald command-btn" %>
  <%= link_to 'Progress', chart_project_path(@project), class: "emerald command-btn" %>
  <%= link_to 'Project details', project_path(@project), class: "emerald command-btn" %>
</div>
